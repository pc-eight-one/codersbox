---
interface Props {
  degree?: string;
  institution?: string;
  period?: string;
  description?: string;
  subjects?: string[];
}

const { 
  degree = 'Bachelor of Science in Computer Science',
  institution = 'University of Technology',
  period = '2013 - 2017',
  description = 'Graduated with honors. Focused on software engineering, web development, and database systems. Completed a senior project building a collaborative task management application.',
  subjects = ['Algorithms', 'Data Structures', 'Database Systems', 'Web Development']
} = Astro.props;
---

<div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h3 class="text-xl font-bold">{degree}</h3>
      <p class="text-lg text-gray-700">{institution}</p>
    </div>
    <span class="text-gray-500">{period}</span>
  </div>
  <p class="text-gray-600 mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    {subjects.map((subject) => (
      <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">{subject}</span>
    ))}
  </div>
</div>