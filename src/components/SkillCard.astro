---
import { Icon } from 'astro-icon/components';

interface Props {
  title?: string;
  skills?: string[];
  icon?: string;
}

const { 
  title = 'Frontend',
  skills = ['React', 'Vue.js', 'TypeScript', 'CSS', 'Responsive Design'],
  icon = 'fa6-solid:code'
} = Astro.props;
---

<div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm skill-card">
  <div class="flex items-center mb-4">
    <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center mr-4">
      <Icon name={icon} class="text-blue-500 text-2xl" />
    </div>
    <h3 class="text-xl font-bold">{title}</h3>
  </div>
  <ul class="space-y-2 text-gray-600">
    {skills.map((skill) => (
      <li class="flex items-center">
        <Icon name="fa6-solid:check" class="text-green-500 mr-2" />
        {skill}
      </li>
    ))}
  </ul>
</div>