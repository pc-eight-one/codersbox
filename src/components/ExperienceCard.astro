---
interface Props {
  position?: string;
  company?: string;
  period?: string;
  description?: string;
  technologies?: string[];
}

const { 
  position = 'Senior Frontend Developer',
  company = 'TechFlow Inc.',
  period = '2022 - Present',
  description = 'Lead developer for the company\'s SaaS product, building responsive and accessible user interfaces with React and TypeScript. Implemented CI/CD pipelines, improved test coverage, and mentored junior developers.',
  technologies = ['React', 'TypeScript', 'Redux', 'Jest', 'CI/CD']
} = Astro.props;
---

<div class="flex">
  <div class="mr-4 flex-shrink-0 pt-1">
    <div class="w-3 h-3 rounded-full bg-gray-800"></div>
    <div class="w-0.5 h-full bg-gray-200 mx-auto mt-2"></div>
  </div>
  <div>
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-2">
      <h3 class="text-xl font-bold">{position}</h3>
      <span class="text-gray-500 text-sm sm:ml-4">{period}</span>
    </div>
    <h4 class="text-lg font-medium text-gray-700 mb-2">{company}</h4>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2">
      {technologies.map((tech) => (
        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">{tech}</span>
      ))}
    </div>
  </div>
</div>