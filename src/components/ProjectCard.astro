---
import { Icon } from 'astro-icon/components';

interface Props {
  title?: string;
  description?: string;
  tech?: string[];
  slug?: string;
  featured?: boolean;
  github?: string;
  demo?: string;
  status?: string;
}

const { 
  title = 'Weather Dashboard',
  description = 'A responsive weather app built with Vue.js and the OpenWeather API. Features 7-day forecasts and location search.',
  tech = ['Vue', 'API'],
  slug = '#',
  featured = false,
  github = '#',
  demo,
  status = 'completed'
} = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 h-full">
  <div class="bg-gray-900 h-40 flex items-center justify-center">
    <Icon name="fa6-solid:code" class="text-4xl text-gray-400" />
  </div>
  <div class="p-6">
    <div class="flex items-center justify-between mb-2">
      <h3 class="font-bold text-lg text-gray-900 dark:text-gray-100">{title}</h3>
      {featured && (
        <span class="bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-xs px-2 py-1 rounded-full font-medium">
          Featured
        </span>
      )}
    </div>
    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 leading-relaxed">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {tech.map((techItem) => (
        <span class="bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full px-3 py-1 text-xs font-medium">
          {techItem}
        </span>
      ))}
    </div>
    <div class="flex items-center justify-between">
      <a href={`/projects/${slug}`} class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm font-medium">
        View Details â†’
      </a>
      <div class="flex items-center space-x-2">
        {github && github !== '#' && (
          <a href={github} target="_blank" rel="noopener noreferrer" class="text-gray-700 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors">
            <Icon name="fa6-brands:github" class="text-lg" />
          </a>
        )}
        {demo && (
          <a href={demo} target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
            <Icon name="fa6-solid:link" class="text-sm" />
          </a>
        )}
      </div>
    </div>
  </div>
</div>